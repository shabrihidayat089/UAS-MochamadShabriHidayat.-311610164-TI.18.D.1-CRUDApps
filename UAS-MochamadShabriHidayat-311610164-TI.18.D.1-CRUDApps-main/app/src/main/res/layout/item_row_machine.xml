<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearClickMachine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/machineIdRow"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/placeholder"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/editMachine"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/rounded_corner_primary"
            android:src="@drawable/ic_edit_white"
            android:text="@string/edit" />

        <ImageButton
            android:id="@+id/deleteMachine"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/rounded_corner_danger"
            android:src="@drawable/ic_delete_white"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/machineDocumentRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>